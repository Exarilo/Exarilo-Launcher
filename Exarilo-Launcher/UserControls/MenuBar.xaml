<UserControl x:Class="Exarilo_Launcher.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Exarilo_Launcher"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <Border BorderThickness="1" CornerRadius="10"  Background="#FF2E3349" >
        <Grid>
            <StackPanel Orientation="Vertical">
                <Image Grid.Row="0" VerticalAlignment="Top" Source="/avatar.png" Width="85" Height="79" Stretch="Fill" Margin="-25,-6,-25,0"/>
                <Button x:Name="BtAdd" Content="Ajouter ➕"  Padding="5" Background="Transparent" BorderBrush="Transparent" Foreground="#FF3AA914" HorizontalAlignment="Stretch" Click="Button_Click"/>
                <Button x:Name="Bouton1" Content="Bouton 1" Padding="5" Background="Transparent" BorderBrush="Transparent" Foreground="#FF007EF9" HorizontalAlignment="Stretch" Click="Button_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
